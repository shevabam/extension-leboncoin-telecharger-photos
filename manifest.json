{
    "manifest_version": 3,
    "name": "Télécharger photos annonce Leboncoin",
    "description": "Télécharger facilement les photos d'une annonce Leboncoin",
    "version": "1.1.0",
    "author": "@shevabam",
    "homepage_url": "https://github.com/shevabam/extension-leboncoin-telecharger-photos",
    "permissions": [
        "scripting",
        "activeTab",
        "notifications",
        "downloads",
        "contextMenus"
    ],
    "host_permissions": [
        "http://leboncoin.fr/*",
        "https://leboncoin.fr/*"
    ],
    "action": {
        "default_icon" : "img/icon_default.png",
        "default_popup": "popup.html",
        "default_title": "Télécharger les photos de l'annonce Leboncoin"
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "icons": {
        "128" : "img/icon_128.png"
    }
}